<!DOCTYPE html>
<html>
<head>
	<title>Scatify</title>
	<link rel="stylesheet" type="text/css" href="https://bootswatch.com/4/litera/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<link rel="stylesheet" type="text/css" href="/css/pricing.css">
	<link rel="stylesheet" type="text/css" href="/css/loginAndSignup.css">
  <link rel="stylesheet" type="text/css" href="/css/product.css">
</head>
<body>
	<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 border-bottom box-shadow">
      <h5 class="my-0 mr-md-auto font-weight-normal"><a href="/">Scatify</a></h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <% if(authData != null) { %>
        <a class="p-2 text-dark">Hello, <%= authData.email %></a>
        <span class="bar">|</span>
        <a class="p-2 text-dark" href="/">Homecoming</a>
        <span class="bar">|</span>
        <a class="p-2 text-dark" href="/albums">Albums</a>
        <a class="p-2 text-dark" href="/genres">Genre</a>
        <span class="bar">|</span>        
        <a class="btn btn-outline-primary" href="/users/logout">Logout</a>

        <% } else {%>
        <a class="p-2 text-dark" href="/users/login">Login</a>

      </nav>
      <a class="btn btn-outline-primary" href="/users/register">Sign up</a>
        <% } %>

    </div>
  <div class="container">

    <% if(success_msg != false){ %>
      <div class="alert alert-success">
        <%= success_msg %>
      </div>
    <% } %>

    <% if (error_msg != false){ %>
      <div class="alert alert-danger">
        <%= error_msg %>
      </div>
    <% } %>

  </div>
