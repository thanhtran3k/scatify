<% include ../partials/header %>
  <div id="form-login">
    <div class="catto-logo">
    	<a href="/"><img class="mb-4" src="/images/logo.png" alt="" width="72" height="72"></a>
    </div>
  	<form method="post" action="/users/login">
        
        <h1 class="text-center h3 mb-3 font-weight-normal">Passport please!</h1>
        <label for="email" class="sr-only">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Email address" required autofocus>

        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>

        <button class="btn btn-lg btn-primary btn-block btn-login" type="submit">Login</button>
    </form>

        <a href="/users/register">You don't have an account?</a>
  </div>
<% include ../partials/footer %>
